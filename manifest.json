{
  "name": "Monk Duck",
  "description": "Monk Duck music addon has more than 300 songs ! ",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage","activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "options_page": "options.html",
    "default_icon": {
      "16": "/16.png",
      "32": "/32.png",
      "48": "/48.png",
      "128": "/128.png"
    }
  },
  "icons": {
    "16": "/16.png",
    "32": "/32.png",
    "48": "/48.png",
    "128": "/128.png"
  }
}